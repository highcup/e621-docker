<div class="header">
  <div class="row">
    <span class="info">
      <strong>Date</strong>
      <%= compact_time(post.created_at) %>
    </span>
    <% if CurrentUser.is_moderator? %>
      <span class="info">
        <strong>User</strong>
        <%= link_to_user(post.uploader) %>
      </span>
    <% end %>
    <span class="info">
      <strong>Rating</strong>
      <%= post.rating %>
    </span>
    <span class="info">
      <strong>Score</strong>
      <span>
        <%= post_vote_block(post, post.own_vote) %>
      </span>
    </span>
  </div>
  <div class="row list-of-tags hidden" id="post-tags-<%= post.id %>">
    <strong>Tags</strong>
    <a href="#" class="comment-tag-hide-link" data-post-id="<%= post.id %>"></a>
    <div class="tag-list">
      <%= post.presenter.inline_tag_list_html %>
    </div>
  </div>
</div>

