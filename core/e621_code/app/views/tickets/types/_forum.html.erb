<% if @ticket.forum %>
  <tr>
    <td><span class='title'>Reported Forum Post</span></td>
    <td>
      <%= link_to("Post by #{@ticket.forum.creator.name} in '#{@ticket.forum.topic.title}'", forum_post_path(@ticket.forum)) %>
    </td>
  </tr>
<% else %>
  <tr>
    <td><span class='title'>Reported Forum Post</span></td>
    <td><span class='redtext'>Forum post has been deleted</span></td>
  </tr>
<% end %>
