<div id="detailed-rejection-dialog" title="Detailed Rejection" style="display: none;">
  <p>You can supply a short message to the uploader explaining why you rejected this upload.</p>

  <%= simple_form_for(PostDisapproval.new, url: moderator_post_disapprovals_path, id: "detailed-rejection-form") do |f| %>
    <%= f.hidden_field :post_id, value: "x" %>
    <%= f.input :reason, collection: [["Borderline Relevant", "borderline_relevant"], ["Borderline Quality", "borderline_quality"], ["Other", "other"]] %>
    <%= f.input :message, as: :string %>
  <% end %>
</div>
